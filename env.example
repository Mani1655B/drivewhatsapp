# Copy this file to .env and fill in your actual credentials

# n8n Basic Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_admin_password

# Database (optional - uses SQLite by default)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=postgres
# DB_POSTGRESDB_PASSWORD=your_postgres_password

# Vonage Messages API Configuration (WhatsApp)
# Get these from: https://dashboard.nexmo.com/
VONAGE_API_KEY=your_vonage_api_key_here
VONAGE_API_SECRET=your_vonage_api_secret_here
VONAGE_APPLICATION_ID=your_vonage_application_id
VONAGE_WEBHOOK_URL=https://your-domain.ngrok.io/webhook/whatsapp

# Google Drive API Configuration
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5678/rest/oauth2-credential/callback

# Google Gemini API Configuration
# Get this from: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash-latest
GEMINI_MAX_TOKENS=500

# Security Configuration
WEBHOOK_SECRET=your_webhook_secret_change_this_value
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here

# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# Timezone
GENERIC_TIMEZONE=America/New_York

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Execution Settings
EXECUTIONS_TIMEOUT=300
EXECUTIONS_TIMEOUT_MAX=3600

# File Upload Limits
N8N_PAYLOAD_SIZE_MAX=16

# CORS Settings (if needed)
# N8N_CORS_ORIGIN=*

# Optional: External Database for Production
# N8N_DATABASE_TYPE=postgresdb
# N8N_DATABASE_HOST=localhost
# N8N_DATABASE_PORT=5432
# N8N_DATABASE_NAME=n8n
# N8N_DATABASE_USER=n8n
# N8N_DATABASE_PASSWORD=your_database_password
